<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D2F43"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="#D028415A"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Choose a position"
                android:textColor="#F0F0F0"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/R端cken"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/sitting" />

            <ImageView
                android:id="@+id/Sitzt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/laying" />

            <ImageView
                android:id="@+id/fuss"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/zerogravity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adjust_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="Adjust or Type"
                android:textColor="#F0F0F0"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/r端cken_Edit_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    app:layout_constraintTop_toTopOf="parent" />


                <SeekBar
                    android:id="@+id/r端cken_Seekbar"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:max="87"
                    android:progressBackgroundTint="@android:color/white"
                    android:thumbTint="@android:color/holo_blue_light"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="16dp" />

                <Button
                    android:id="@+id/buttonSitzt"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="Sitzen"
                    android:textColor="@android:color/white"
                    android:clickable="true"
                    android:background="#1D2F43"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Sitzt_Edit_Text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:ems="10"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:text="0"
                    android:textSize="30dp"
                    app:layout_constraintTop_toTopOf="parent"/>


                <SeekBar
                    android:id="@+id/sitzt_Seek_Bar"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:max="30"
                    android:progressBackgroundTint="@android:color/white"
                    android:thumbTint="@android:color/holo_blue_light"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="16dp" />

                <Button
                    android:id="@+id/buttonR端cken"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:background="#1D2F43"
                    android:clickable="true"
                    android:text="Liegen"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/fuss_Edit_Text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/fuss_Seek_Bar"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:max="90"
                    android:progressBackgroundTint="@android:color/white"
                    android:thumbTint="@android:color/holo_blue_light"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="16dp" />
                <Button
                    android:id="@+id/buttonfuss"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="0 Gravity"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:background="#1D2F43"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/breaak" />

            <ImageView
                android:id="@+id/open"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/open" />

            <ImageView
                android:id="@+id/save_position"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/save" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="#D028415A"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pick_color_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Pick a color"
                android:textColor="#F0F0F0"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/colorpicker" />

            <TextView
                android:id="@+id/brightness_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Brightness"
                android:textColor="#F0F0F0"
                android:textSize="30dp" />

            <SeekBar
                android:id="@+id/brightness"
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/save_color"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/save" />

                <ImageView
                    android:id="@+id/save3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/type_color_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Type color code"
                    android:textColor="#F0F0F0"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="#D028415A"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Play a sound"
                android:textColor="#F0F0F0"
                android:textSize="30dp" />

            <ListView
                android:id="@+id/meditation_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>